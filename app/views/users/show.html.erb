<div class="main user-show">
  <div class="container">
    <div class="user">
      <h1><%= @user.username %></h2>
      <% if @current_user && @current_user.id == params[:id].to_i || session[:admin] %>
        <%= link_to("編集", "/users/#{@user.id}/edit") %>
        <%= link_to("削除", "/users/#{@user.id}/destroy", {method: "post"}) %>
      <% end %>
    </div>
  </div>
</div>