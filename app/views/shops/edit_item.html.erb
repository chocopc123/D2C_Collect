<div class="main shops-edit_item">
  <div class="container">
    <div class="form-heading">商品情報の編集</div>
    <div class="form shops-form">
      <div class="form-body">
        <%= form_with :url => {controller:"shops", action:"update_item"} do |f| %>
            <% @item.errors.full_messages.each do |message| %>
              <%= message %>
            <% end %>
            <p>商品名 <span>[必須]</span></p>
            <%= f.text_field :name, value: @item.name %>
            <p>アイコン</p>
            <%= f.file_field :icon %>
            <p>商品説明</p>
            <%= f.text_area :content, value: @item.content,:size=>"40x5" %>
            <%= link_to("placeholderを設定していない理由(外部サイト)", "https://u-site.jp/alertbox/form-design-placeholders", class: "link") %>
            <%= f.submit "保存" %>
        <% end %>
      </div>
    </div>
  </div>
</div>