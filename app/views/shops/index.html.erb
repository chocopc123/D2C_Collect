<div class="main shops-index">
  <div class="container">
    <% @shops.each do |shop| %>
        <div class="shops-index-item">
            <div class="shop-left">
              <img src="<%= "/shop_icons/#{shop.icon_name}" %>">
            </div>
            <div class="shop-right">
              <%= link_to(shop.name, "/shops/#{shop.id}") %>
            </div>
        </div>
    <% end %>
  </div>
</div>